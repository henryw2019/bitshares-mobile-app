<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ActivityAddAssetPairsResult"
    android:background="@color/theme01.color09">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="15dp"
        android:padding="10dp"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal">


            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"

                android:layout_gravity="center_vertical"
                android:src="@drawable/ic_btn_search"/>

            <EditText
                android:id="@+id/edit_search_trade_obj_for_search"
                android:singleLine="true"
                android:maxLines="1"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical|right"
                android:gravity="center_vertical|left"
                android:layout_weight="1"
                android:textColor="#ffffff"
                android:textColorHint="@color/theme01.textColorGray"
                android:hint="@string/kSearchPlaceholderAsset"
                android:theme="@style/theme01.EditText"
                android:background="@null"
                android:textSize="16dp"/>


            <TextView
                android:id="@+id/text_cancel_from_add_trade_obj"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:layout_gravity="center_vertical|right"
                android:text="@string/Cancel"
                android:textColor="@color/theme01.color03"
                android:foregroundGravity="right"
                android:src="@drawable/ic_btn_right_arrow" />

        </LinearLayout>
        <View android:layout_height="1dp" android:background="@color/theme01.textColorNormal" android:layout_width="fill_parent"></View>

        <TextView
            android:id="@+id/tv_title_from_add_trade_obj_search"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/theme01.color03"
            android:layout_marginTop="5dp"
            android:text="@string/search_result"
            />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:id="@+id/layout_search_from_add_trade_obj_search"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" />
        </ScrollView>

    </LinearLayout>

</android.support.constraint.ConstraintLayout>